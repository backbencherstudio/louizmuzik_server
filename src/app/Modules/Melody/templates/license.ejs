            padding: 24px 48px;
            background: white;
            color: #111;
            line-height: 1.5;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
        }

        .title {
            font-size: 28px;
            font-weight: bold;
            color: #0CCF9F;
            margin: 0;
        }

        .logo {
            height: 40px;
            width: auto;
        }

        .info-bar {
            background: rgba(12, 207, 159, 0.05);
            padding: 16px;
            border-radius: 8px;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 16px;
            margin-bottom: 24px;
        }

        .info-item {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 14px;
        }

        .card {
            background: white;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            padding: 24px;
            margin-bottom: 24px;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
        }

        .section-title {
            font-size: 20px;
            font-weight: 600;
            color: #0CCF9F;
            margin: 0 0 16px 0;
        }

        .content {
            margin-left: 24px;
        }

        .label {
            font-size: 14px;
            color: #6b7280;
            margin-bottom: 4px;
        }

        .value {
            font-weight: 500;
            margin-bottom: 12px;
        }

        .separator {
            border-top: 1px solid #e5e7eb;
            margin: 24px 0;
        }

        .text {
            font-size: 14px;
            margin-bottom: 16px;
        }

        .acceptance-box {
            background: rgba(12, 207, 159, 0.05);
            padding: 16px;
            border-radius: 8px;
        }

        .footer {
            text-align: center;
            font-size: 14px;
            color: #6b7280;
